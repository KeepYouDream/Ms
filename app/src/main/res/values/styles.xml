<resources>
    <!-- 定义Activity 进入和退出的动画-->
    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_zoom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_zoom_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/fade_zoom_in</item>
        <item name="android:taskOpenExitAnimation">@anim/fade_zoom_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/fade_zoom_in</item>
        <item name="android:taskCloseExitAnimation">@anim/fade_zoom_out</item>
        <item name="android:taskToFrontEnterAnimation">@anim/fade_zoom_in</item>
        <item name="android:taskToFrontExitAnimation">@anim/fade_zoom_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/fade_zoom_in</item>
        <item name="android:taskToBackExitAnimation">@anim/fade_zoom_out</item>
    </style>

    <style name="Animation.Splash" parent="@style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/fade_zoom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_zoom_out</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Splash</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTheme" parent="AppTheme.NoActionBar">
        <item name="myTheme">defult</item>
        <item name="status_bar_color">@color/colorBase</item>
        <item name="colorPrimary">@color/colorBase</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">#FF00F0</item>
        <item name="toolbar_menu_text_color">@color/colorToolbarMenuText</item>
        <item name="toolbar_text_color">@color/colorTitleText</item>
        <item name="progress_color">@color/colorBase</item>
    </style>

    <style name="NightTheme" parent="AppTheme.NoActionBar">
        <item name="myTheme">theme1</item>
        <item name="status_bar_color">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">#FF00F0</item>
        <item name="toolbar_menu_text_color">@color/colorToolbarMenuText</item>
        <item name="toolbar_text_color">@color/colorTitleText</item>
        <item name="progress_color">@color/colorPrimary</item>
    </style>

    <style name="textName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTitleText</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="DefaultTheme.ImageDetailTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="toolbarText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>
</resources>
