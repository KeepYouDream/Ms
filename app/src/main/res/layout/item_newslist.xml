<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="click"
            type="com.example.wdc.ui.fragment.news.OnItemClickListener"/>

        <variable
            name="longClick"
            type="com.example.wdc.ui.fragment.news.OnItemLongClickListener"/>

        <variable
            name="news"
            type="com.example.wdc.bean.news.NewsBean"/>
    </data>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/newslist_cardview"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2dp"
        android:onClick="@{() ->click.onItemClick(news)}"
        android:onLongClick="@{() ->longClick.longClick(news)}"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/newslist_img"
                android:layout_width="76dp"
                android:layout_height="68dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@mipmap/app_icon"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/newslist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/newslist_img"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:padding="8dp"
                android:text="@{news.title}"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>